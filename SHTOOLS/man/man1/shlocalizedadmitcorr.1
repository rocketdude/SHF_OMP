\&\s-1ADMIT_ERROR\s0(\s-1LMAX\-LWIN+1\s0), \s-1CORR_ERRR\s0(\s-1LMAX\-LWIN+1\s0), \s-1TAPER_WT\s0(K)
.IP "\s-1INTEGER\s0, \s-1OPTIONAL\s0" 19
