\&\s-1SHOUT\s0(2, \s-1LMAX1+LMAX2+1\s0, \s-1LMAX1+LMAX2+1\s0), \s-1SH1\s0(2,\ \s-1LMAX1+1\s0,\ \s-1LMAX1+1\s0), \s-1SH2\s0(2,\ \s-1LMAX2+1\s0,\ \s-1LMAX2+1\s0)
.IP "\s-1INTEGER\s0" 19
